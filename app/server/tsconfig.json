{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2016"
    ],
    "allowJs": true,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": [
    "client/**/*.ts",
    "client/**/*.tsx",
    "server/**/*.ts",
    "server/**/*.tsx",
    "imports/**/*.ts",
    "imports/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".meteor"
  ]
}
